{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "*",
    "paths": {
      "*": [
        "*"
      ]
    },
    "esModuleInterop": true,
    "declaration": true
  }
}
